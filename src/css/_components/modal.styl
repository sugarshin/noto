.ReactModal__Body--open
  position fixed
  width 100%
  height 100%

.ReactModal__Overlay
  background-color rgba(255, 255, 255, .75)

  &.ReactModal__Overlay--after-open
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    z-index 1024

.ReactModal__Content
  position absolute
  top 64px
  left 64px
  right 64px
  bottom 64px
  border 1px solid $baseColorLevel3
  background $baseColorLevel1
  overflow auto
  overflow-scrolling touch
  outline none
  padding 4%
  // &.ReactModal__Content--after-open

@media only screen and (max-width: 767px)
  .ReactModal__Content
    top 32px
    left 32px
    right 32px
    bottom 32px
    padding 2%
