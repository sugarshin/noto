.note-container
  width 100%
  height 100%
  box-sizing border-box
  padding 20px 8px 0 256px
.note-title-wrapper
  float left
  width 50%
  font-size 1.5em
  line-height 1.3
  .note-title
    display inline-block
    cursor pointer
    .octicon
      margin 0 .5em
  .note-title-editor
    display none
  &.editing
    .note-title
      display none
    .note-title-editor
      display block

.note-created-at
  float left
  width 50%
  text-align right
  margin-bottom 14px

.note-tags
  clear left
  margin-bottom 1em
.note-textarea
  width 100%
  height 80%
  padding .4em
  box-sizing border-box

.note-copy-button
  margin 8px 0 0
  position relative
  text-align right

.success-copy-wrapper
  display none
  margin-right .5em
  &.success-copy-visible
    display inline-block
    animation-duration 3s
    animation-name success-copy
    animation-fill-mode forwards

@keyframes success-copy
  0%
    opacity 1
  100%
    opacity 0
